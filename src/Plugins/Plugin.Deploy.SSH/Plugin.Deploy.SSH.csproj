<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
  <Description>SSH/SFTP deployment plugin for Revela</Description>
  <AssemblyName>Spectara.Revela.Plugin.Deploy.SSH</AssemblyName>
  <PackageId>Spectara.Revela.Plugin.Deploy.SSH</PackageId>
  <PackageTags>revela;plugin;deploy;ssh;sftp</PackageTags>
  <PackageIcon>icon.png</PackageIcon>
  <PackageReleaseNotes>https://github.com/spectara/revela/blob/main/CHANGELOG.md</PackageReleaseNotes>
  <PackageType>RevelaPlugin</PackageType>
</PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\..\assets\revela_100.png" Pack="true" PackagePath="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj">
      <PrivateAssets>all</PrivateAssets>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SSH.NET" />
  </ItemGroup>

</Project>
