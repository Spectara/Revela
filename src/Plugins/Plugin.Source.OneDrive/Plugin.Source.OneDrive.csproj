<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
  <Description>OneDrive shared folder source plugin for Revela</Description>
  <AssemblyName>Spectara.Revela.Plugin.Source.OneDrive</AssemblyName>
  <PackageId>Spectara.Revela.Plugin.Source.OneDrive</PackageId>
  <PackageTags>revela;plugin;source;onedrive;shared</PackageTags>
  <PackageIcon>icon.png</PackageIcon>
  <PackageReleaseNotes>https://github.com/spectara/revela/blob/main/CHANGELOG.md</PackageReleaseNotes>

  <!-- Plugin Support: Copies all dependencies to output, generates complete .deps.json -->
  <EnableDynamicLoading>true</EnableDynamicLoading>
</PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\..\assets\Spectara_100.png" Pack="true" PackagePath="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to host Core - NOT copied to output (loaded from host) -->
    <ProjectReference Include="..\..\Core\Core.csproj">
      <Private>false</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <!-- HttpClient and JSON serialization are built into .NET 10 -->
    <!-- Microsoft.Graph and Azure.Identity are for OAuth (not needed for shared links) -->
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />
    <PackageReference Include="Microsoft.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" />
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

</Project>

