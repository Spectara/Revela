<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Minimal theme for Revela - clean starting point for custom themes</Description>
    <AssemblyName>Spectara.Revela.Theme.Minimal</AssemblyName>
    <RootNamespace>Spectara.Revela.Theme.Minimal</RootNamespace>
    <PackageId>Spectara.Revela.Theme.Minimal</PackageId>
    <PackageTags>revela;theme;minimal;photography;starter</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Embed theme.json as resource -->
    <EmbeddedResource Include="theme.json">
      <LogicalName>theme.json</LogicalName>
    </EmbeddedResource>
    <!-- Embed all template files as resources -->
    <EmbeddedResource Include="Templates\**\*">
      <LogicalName>%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj">
      <PrivateAssets>all</PrivateAssets>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

</Project>
