<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Expose theme for Revela - original photography portfolio design</Description>
    <AssemblyName>Spectara.Revela.Theme.Expose</AssemblyName>
    <RootNamespace>Spectara.Revela.Theme.Expose</RootNamespace>
    <PackageId>Spectara.Revela.Theme.Expose</PackageId>
    <PackageTags>revela;theme;expose;photography;gallery;lightbox</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Embed theme.json as resource -->
    <EmbeddedResource Include="theme.json">
      <LogicalName>theme.json</LogicalName>
    </EmbeddedResource>
    <!-- Embed all template files as resources -->
    <EmbeddedResource Include="Templates\**\*">
      <LogicalName>%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj">
      <PrivateAssets>all</PrivateAssets>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

</Project>
