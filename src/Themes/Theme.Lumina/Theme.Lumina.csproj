<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Lumina theme for Revela - elegant photography portfolio design</Description>
    <AssemblyName>Spectara.Revela.Theme.Lumina</AssemblyName>
    <RootNamespace>Spectara.Revela.Theme.Lumina</RootNamespace>
    <PackageId>Spectara.Revela.Theme.Lumina</PackageId>
    <PackageTags>revela;theme;lumina;photography;gallery;lightbox</PackageTags>

    <!-- Plugin Support: Copies all dependencies to output, generates complete .deps.json -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
  </PropertyGroup>

  <ItemGroup>
    <!-- Embed theme.json as resource -->
    <EmbeddedResource Include="theme.json">
      <LogicalName>theme.json</LogicalName>
    </EmbeddedResource>
    <!-- Embed layout template (convention: always Layout.revela in root) -->
    <EmbeddedResource Include="Layout.revela">
      <LogicalName>Layout.revela</LogicalName>
    </EmbeddedResource>
    <!-- Embed body templates (page content) -->
    <EmbeddedResource Include="Body\**\*.revela">
      <LogicalName>Body\%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
    <!-- Embed partial templates (reusable components) -->
    <EmbeddedResource Include="Partials\**\*.revela">
      <LogicalName>Partials\%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
    <!-- Embed CSS/JS assets with Assets/ prefix for consistent export structure -->
    <EmbeddedResource Include="Assets\**\*">
      <LogicalName>Assets\%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to host Core - NOT copied to output (loaded from host) -->
    <ProjectReference Include="..\..\Core\Core.csproj">
      <Private>false</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

</Project>
