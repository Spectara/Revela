<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Statistics extension for Lumina theme - displays EXIF statistics with charts</Description>
    <AssemblyName>Spectara.Revela.Theme.Lumina.Statistics</AssemblyName>
    <RootNamespace>Spectara.Revela.Theme.Lumina.Statistics</RootNamespace>
    <PackageId>Spectara.Revela.Theme.Lumina.Statistics</PackageId>
    <PackageTags>revela;theme;lumina;statistics;exif;charts</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReleaseNotes>https://github.com/spectara/revela/blob/main/CHANGELOG.md</PackageReleaseNotes>

    <!-- Plugin Support: Copies all dependencies to output, generates complete .deps.json -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\..\assets\Spectara_100.png" Pack="true" PackagePath="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed extension.json as resource -->
    <EmbeddedResource Include="extension.json">
      <LogicalName>extension.json</LogicalName>
    </EmbeddedResource>
    <!-- Embed all template files with Templates/ prefix for consistent export structure -->
    <EmbeddedResource Include="Templates\**\*">
      <LogicalName>Templates\%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
    <!-- Embed CSS files with Assets/ prefix -->
    <EmbeddedResource Include="Assets\**\*">
      <LogicalName>Assets\%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to host Core - NOT copied to output (loaded from host) -->
    <ProjectReference Include="..\..\Core\Core.csproj">
      <Private>false</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

</Project>
